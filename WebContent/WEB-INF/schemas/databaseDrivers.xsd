	<xs:annotation>
		<xs:documentation>The schema for database driver xml files</xs:documentation>
	</xs:annotation>
	<xs:element name="databaseDrivers">		
		<xs:annotation>
			<xs:documentation>Each xml file can describe several drivers</xs:documentation>
		</xs:annotation>
		<xs:complexType>			
			<xs:sequence>			
				<xs:element name="databaseDriver" minOccurs="1" maxOccurs="unbounded">
					<xs:annotation>
						<xs:documentation>The dbdriver xml is turned into json and loaded into the admin screen where it is used to create new objects
						</xs:documentation>
					</xs:annotation>
					<xs:complexType>
						<xs:sequence>
							<xs:element name="name">
								<xs:annotation>
									<xs:documentation>The database driver name is presented to users when describing, or logging something about this action
									</xs:documentation>
								</xs:annotation>
								<xs:simpleType>
									<xs:restriction base="xs:string">
										<xs:minLength value="1" />
									</xs:restriction>
								</xs:simpleType>
							</xs:element>
							<xs:element name="class">
								<xs:annotation>
									<xs:documentation>Each driver must have a Java class, on the classpath
									</xs:documentation>
								</xs:annotation>
								<xs:simpleType>
									<xs:restriction base="xs:string">
										<xs:minLength value="1" />
									</xs:restriction>
								</xs:simpleType>
							</xs:element>													
						</xs:sequence>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
			<xs:attribute name="xmlVersion" type="xs:integer" use="required">
				<xs:annotation>
					<xs:documentation>This attribute defines the version of the xml file</xs:documentation>
				</xs:annotation>
			</xs:attribute>
		</xs:complexType>
	</xs:element>
</xs:schema>